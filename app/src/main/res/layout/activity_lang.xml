<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#025159"
    tools:context=".Lang">

    <Button
        android:id="@+id/btn_esp"
        android:layout_width="361dp"
        android:layout_height="93dp"
        android:layout_marginBottom="256dp"
        android:backgroundTint="#0EC1B8"
        android:backgroundTintMode="src_in"
        android:drawableLeft="@drawable/espana"
        android:text="ESPAÃ‘OL"
        android:onClick="setLangESP"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_eng"
        android:layout_width="361dp"
        android:layout_height="93dp"
        android:layout_marginTop="44dp"
        android:backgroundTint="#00BFB8"
        android:backgroundTintMode="src_in"
        android:drawableLeft="@drawable/uk"
        android:text="ENGLISH"
        android:onClick="setLangENG"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_esp"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/txt_instrucciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="44dp"
        android:text="Choose language | Seleccione el lenguaje"
        android:textAlignment="center"
        android:textColor="#F28705"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_esp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="416dp"
        android:layout_height="304dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.002"
        app:srcCompat="@drawable/logo2" />

</androidx.constraintlayout.widget.ConstraintLayout>